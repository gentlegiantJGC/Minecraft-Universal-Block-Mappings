{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://raw.githubusercontent.com/gentlegiantJGC/Minecraft-Universal-Conversion-Mappings/master/compiler/format_specification/json_schema.json",
	"definitions": {
		"specification": {
			"type": "object",
			"properties": {
				"properties": {
					"type": "object",
					"additionalProperties": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				},
				"defaults": {
					"type": "object",
					"additionalProperties": {
						"type": "string"
					}
				}
			}
		},
		"mapping_functions": {
			"type": "array",
			"required": ["function", "options"],
			"additionalProperties": false,
			"items": {
				"type": "object",
				"oneOf": [
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["new_block"]
							},
							"options": {
								"type": "string"
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["new_properties"]
							},
							"options": {
								"type": "object",
								"additionalProperties": {
									"type": "string"
								}
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["map_properties"]
							},
							"options": {
								"type": "object",
								"additionalProperties": {
									"type": "object",
									"additionalProperties": {
										"$ref": "#/definitions/mapping_functions"
									}
								}
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["carry_properties"]
							},
							"options": {
								"type": "object",
								"additionalProperties": {
									"type": "array",
									"items": {
										"type": "string"
									}
								}
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["new_nbt"]
							},
							"options": {
								"type": "object"
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["multiblock"]
							},
							"options": {
								"oneOf": [
									{
										"type": "object",
										"properties": {
											"coords": {
												"type": "array",
												"items": {
													"type": "integer"
												},
												"minLength": 3,
												"maxLength": 3
											}
										},
										"required": ["coords"],
										"$ref": "#/definitions/mapping_functions"
									},
									{
										"type": "array",
										"items": [
											{
												"type": "object",
												"properties": {
													"coords": {
														"type": "array",
														"items": {
															"type": "integer"
														},
														"minLength": 3,
														"maxLength": 3
													}
												},
												"required": ["coords"],
												"$ref": "#/definitions/mapping_functions"
											}
										]
									}
								]
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["map_block_name"]
							},
							"options": {
								"type": "object",
								"additionalProperties": {
									"$ref": "#/definitions/mapping_functions"
								}
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["map_input_nbt"]
							},
							"options": {
								"type": "object"
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["carry_nbt"]
							},
							"options": {
								"type": "object"
							}
						}
					},
					{
						"properties": {
							"function": {
								"type": "string",
								"enum": ["map_nbt"]
							},
							"options": {
								"type": "object"
							}
						}
					}
				]
			}
		}
	},
	"type": "object",
	"properties": {
		"specification": {
			"$ref": "#/definitions/specification"
		},
		"to_universal": {
			"$ref": "#/definitions/mapping_functions"
		},
		"from_universal": {
			"type": "object",
			"additionalProperties": {
				"$ref": "#/definitions/mapping_functions"
			}
		},
		"blockstate_specification": {
			"$ref": "#/definitions/specification"
		},
		"blockstate_to_universal": {
			"$ref": "#/definitions/mapping_functions"
		},
		"blockstate_from_universal": {
			"type": "object",
			"additionalProperties": {
				"$ref": "#/definitions/mapping_functions"
			}
		}
	}
}